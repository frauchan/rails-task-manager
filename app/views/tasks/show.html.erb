<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p> <% if @task.completed? == true %>
  <i class="far fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %> Completed</p>

<%= link_to "<< Back to list", tasks_path %><br><br>
<%= link_to "Delete this task", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }  %>
